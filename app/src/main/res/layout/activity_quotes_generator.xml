<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/qrcode_loader_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuotesGeneratorActivity">

    <Button
        android:id="@+id/go_back_button2"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:onClick="go_back"
        android:text="@string/public_return_button_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/generate_quotes_button"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="@string/quotes_generator_generate_button_text"
        app:layout_constraintBottom_toBottomOf="@+id/user_mood_spinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/user_mood_spinner" />

    <TextView
        android:id="@+id/quotes_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="178dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="176dp"
        android:textSize="20sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/generate_quotes_button" />

    <Spinner
        android:id="@+id/user_mood_spinner"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>